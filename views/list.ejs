<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= kindOfDay %></h1>
    </div>

    <div class="box">
            <!-- <li><%= newListItem %></li> -->
     
            <% for(var item = 0; item < newListItem.length; item++){ %>
                <form action="/delete" method="POST">
                    <div class="item">
                        <input onchange="this.form.submit()" type="checkbox" name="checkbox" value="<%= newListItem[item]._id %>">
                        <p>
                            <%= newListItem[item].name %>
                        </p>
                    </div>
                </form>
            <% } %>
        
            <form class = "item" action="/" method="POST">
                <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                <button type="submit">+</button>
            </form>
    </div>

<%- include("footer") -%>